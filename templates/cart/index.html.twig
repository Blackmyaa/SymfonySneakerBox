{% extends 'base.html.twig' %}

{% block title %}Panier
{% endblock %}


{% block body %}
	{% include "tools/userNav.html.twig" %}
	<main class="container">
		<section class="row mt-2">
			<h1>Panier</h1>
            <table class="table table-striped table-secondary table-bordered">
                <thead>
                    <tr>
                        <th>Produit</th>
                        <th>Prix</th>
                        <th>Quantité</th>
                        <th>Total</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for element in data %}
                        <tr>
                            <td>{{ element.produit.nom }}</td>
                            <td>{{ element.produit.prix / 100 }} €</td>
                            <td>{{ element.quantite}}</td>
                            <td>{{ element.quantite * element.produit.prix / 100 }} €</td>
                            <td>
                                <a href="{{ path('cart_add', {id: element.produit.id}) }}" class="btn btn-success">+</a>
                                <a href="{{ path('cart_remove', {id: element.produit.id}) }}" class="btn btn-warning">-</a>
                                <a href="{{ path('cart_delete', {id: element.produit.id}) }}" class="btn btn-danger">x-x</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center">Votre panier est vide</td>
                        </tr>
                    {% endfor %}
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3">Total</td>
                        <td>{{ total / 100 }} €</td>
                        <td>
                            <a href="{{ path('cart_empty') }}" class="btn btn-danger">Vider</a>
                        </td>
                    </tr>
            </table>
		</section>
	</main>
	{% include "tools/footer.html.twig" %}
{% endblock %}
