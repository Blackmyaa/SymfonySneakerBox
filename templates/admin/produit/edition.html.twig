{% extends 'base.html.twig' %}

{% block title %}Edition - Administration des Produits
{% endblock %}
{% block stylesheets %}
    <style>
        @media(max-width:767px){
            .border-dark{
                --bs-border-opacity: 0;
            }
        }
    </style>
{% endblock %}
{% block body %}
            {% include "tools/dashNav.html.twig" %}
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <h1 class="h2">Modification de {{produit.nom}}:</h1>
                <div class="row">
                    <div class="mt-3 col-10 mx-auto">
                        {% include "admin/produit/produitForm.html.twig" with {'button_label':'Modifier'} %}
                    </div>
                </div>
            </main>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/images.js')}}" defer></script>
{% endblock %}