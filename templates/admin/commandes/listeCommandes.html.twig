{% extends 'base.html.twig' %}

{% block title %}Admin - Liste des commandes
{% endblock %}
{% block body %}
	{% include "tools/dashNav.html.twig" %}
	<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 container">
		{% include "tools/messageFlash.html.twig" %}
		<h1 class="h2 mb-3 mt-3">Liste des commandes</h1>
		<div class="col-8 mx-auto">
			<table class="table table-striped table-bordered justify-content">
				<thead>
					<tr>
						<th scope="col" class="text-center">Numéro</th>
						<th scope="col" class="text-center">Montant</th>
						<th scope="col" class="text-center">Date</th>
						<th scope="col" class="text-center">Consulter</th>
					</tr>
				</thead>

				<tbody>
					{% for commande in commandes %}
						<tr>
							<td class="text-center">{{commande.commande.reference}}</td>
							<td class="text-center">{{commande.montant / 100}}€</td>
							<td class="text-center">{{commande.commande.createdAt.format('d/m/y h:m:s')}}</td>
							<td class="text-center">
								<a class="btn btn-secondary" href="/admin/commandes{{commande.commande.reference}}/details">voir</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</main>
</div></div></div></div>{% endblock %}
